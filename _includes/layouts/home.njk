{% include "head.njk" %}
{% include "header.njk" %}

<h1 class="u-vis-hidden">Explore all books</h1>

<ul class="covers">
  {% for post in posts %}
    <li class="cover">
      {% set current_book = post.data.book %}
      {% set current_cover = '/assets/images/covers/' + current_book + '.jpg' %}
      <a href="{{ post.url | url }}" class="book__image">
        <img src="{{ current_cover | url }}" alt="{{ post.data.title }}" />
      </a>
    </li>
  {% endfor %}
</ul>

